<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scanning_view_activity">




    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="400dp"
        android:id="@+id/recycler_view_scan"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Alert"
        android:id="@+id/go_to_alerts"
        android:onClick="goToAlert"
        app:layout_constraintBottom_toBottomOf="parent"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="insert test alert"
        android:id="@+id/add_test_alert"
        android:onClick="insert_test_alert"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="@id/go_to_alerts"
        />

</android.support.constraint.ConstraintLayout>