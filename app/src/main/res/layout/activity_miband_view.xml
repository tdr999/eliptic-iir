<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".miband_view_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_heart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:onClick="getHeart"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="3dp">

            <ImageView
                android:id="@+id/img_heart"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_favorite_24" />

            <TextView
                android:id="@+id/text_heart_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="170dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="HeartRate"
                android:textSize="25sp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/card_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            tools:layout_editor_absoluteX="10dp"
            android:onClick="getSteps"
            app:layout_constraintTop_toBottomOf="@id/card_heart"
            tools:layout_editor_absoluteY="41dp">


            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_directions_walk_24" />

            <TextView
                android:id="@+id/text_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center|center_horizontal"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Steps"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Distance"
                android:textSize="25sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/text_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center|center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Calories"
                android:textSize="25sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_baterie"
            android:layout_width="match_parent"
            android:onClick="getBattery"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/card_steps"
            tools:layout_editor_absoluteX="3dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_battery_full_24" />

            <TextView
                android:id="@+id/text_baterie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Battery"
                android:textSize="25sp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_mesaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/card_baterie"
            tools:layout_editor_absoluteX="3dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_message_24" />

            <TextView
                android:id="@+id/text_mesaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Send Message"
                android:textSize="25sp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>